    <!DOCTYPE html>
    <html lang="pt-BR">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>¬∑ Dashboard Financeiro</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
        <link rel="icon" type="image/svg+xml" href="landmark.png">
        <link rel="stylesheet" href="styles.css" />
        <script src="https://unpkg.com/lucide@latest"></script> 
    </head>
    <body>
        <nav class="navbar">
            <div class="navbar-brand">Dashboard</div>
            <ul class="navbar-menu">
                <li><a href="#">In√≠cio</a></li>
                <li><a href="#ai-insights">Insights IA</a></li>
                </ul>
                <div class="navbar-actions">
                    <!-- Bot√£o de Configura√ß√£o Ajustado -->
                    <button class="btn-icon" onclick="document.getElementById('settings-modal').showModal()">
                        <i data-lucide="settings"></i> 
                    </button>
                </div>
        </nav>

        <!-- Barra de Meta Fixada -->
        <div id="pinned-goal-bar" class="pinned-goal-bar" style="display: none;">
        </div>

        <main class="dashboard-container container">
            <section class="overview-section">

                <div class="cards-grid">
                    <div class="card card-in">
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div>
                                <h2 class="card-title">Entradas</h2>
                                <i data-lucide="trending-up"></i>
                            </div>
                            <button class="btn-config" onclick="document.getElementById('settings-modal').showModal()">
                                <i data-lucide="plus" class="plus-i"></i>
                                <p class="tooltip-text">Editar Sal√°rio Fixo</p>
                            </button>
                        </div>
                        <p class="card-value" id="entradas">R$ 0,00</p>
                    </div>

                    <div class="card card-out">
                        <h2 class="card-title">Sa√≠das</h2>
                        <p class="card-value" id="saidas">R$ 0,00</p>
                    </div>

                    <div class="card card-total">
                        <h2 class="card-title">Saldo Total</h2>
                        <p class="card-value" id="saldo">R$ 0,00</p>
                    </div>
                </div>
            </section>

            <!-- Bot√µes de A√ß√£o Organizados -->
            <section class="actions-section">
                <button class="btn-action" onclick="document.getElementById('transaction-modal').showModal()">
                    <i data-lucide="plus-circle"></i> Nova Transa√ß√£o
                </button>
                <button class="btn-action" onclick="openGoalsManager()">
                    <i data-lucide="target"></i> Objetivos
                </button>
            </section>

            <section class="grid-layout">
                <div class="card chart-container">
                    <h3>Distribui√ß√£o de Gastos</h3>
                    <div class="chart-wrapper">
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
                
                <!-- Painel de Tarefas -->
                <div class="card tasks-container">
                    <div class="card-header">
                        <h3>Tarefas</h3>
                        <button class="btn-icon" onclick="document.getElementById('task-modal').showModal()" title="Nova Tarefa">
                            <i data-lucide="plus"></i>
                        </button>
                    </div>
                    <ul id="task-list" class="task-list">
                        <!-- Preenchido via JS -->
                    </ul>
                </div>
            </section>

            <section class="table-section">
                <div class="card table-container">
                    <div class="table-header-main">
                        <div class="title-with-info">
                            <h3>√öltimas Transa√ß√µes</h3>
                            <div class="tooltip-wrapper">
                                <i data-lucide="info" class="info-icon"></i>
                                <span class="tooltip-text">Visualize, filtre e gerencie seu hist√≥rico de movimenta√ß√µes.</span>
                            </div>
                        </div>
                    
                        <button class="btn-add-tag" onclick="document.getElementById('tag-modal').showModal()">
                            <i data-lucide="tags"></i> Adicionar Categorias
                        </button>
                    </div>

                    <table id="transaction-table">
                        <thead>
                            <tr>
                                <th>Descri√ß√£o</th>
                                <th>Categoria</th>
                                <th>Valor</th>
                                <th>Tipo</th>
                                <th>Data & Hora</th>
                                <th>A√ß√£o</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Preenchido via JS -->
                        </tbody>
                    </table>
                </div>
            </section>

    <!-- Se√ß√£o de Insights da IA -->
    <section id="ai-insights" class="ai-insights-container">
        <div class="card ai-card">
            <div class="card-header">
                <h3 class="card-title" style="display: flex; align-items: center; gap: 10px;">
                    <!-- √çcone Sparkles do Lucide -->
                    <i data-lucide="sparkles" style="color: #fdcb6e;"></i> 
                    An√°lise Inteligente
                </h3>
                <!-- Bot√£o opcional para disparar a an√°lise futuramente -->
                <button id="btn-analyze" class="btn-header" style="background-color: #6c5ce7;">
                    <i data-lucide="brain-circuit"></i> Gerar Insights
                </button>
            </div>
            
            <div class="ai-grid">
                <!-- Espa√ßo para o Relat√≥rio de Texto -->
                <div class="ai-report" id="ai-report-content">
                    <p style="color: #b2bec3; font-style: italic;">
                        Aguardando dados da Intelig√™ncia Artificial...
                    </p>
                </div>
                
                <!-- Espa√ßo para o Gr√°fico da IA -->
                <div class="chart-container">
                    <div class="chart-wrapper">
                        <canvas id="aiChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </section>




        </main>



        <!-- Modal: Configura√ß√µes Iniciais -->
        <dialog id="settings-modal" class="modal">
            <div class="modal-content card">
                <div class="modal-header">
                    <h3>Configura√ß√µes</h3>
                    <button class="btn-close" onclick="document.getElementById('settings-modal').close()">‚úñ</button>
                </div>
                <form id="settings-form">
                    <div class="input-group">
                        <label for="salary">Sal√°rio Mensal Fixo</label>
                        <input type="number" id="salary" placeholder="Ex: 5000.00" step="0.01">
                    </div>
                    <button type="submit">Salvar Configura√ß√µes</button>
                </form>
            </div>
        </dialog>

        <!-- Modal: Nova Transa√ß√£o -->
        <dialog id="transaction-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="transaction-title">Nova Transa√ß√£o</h3>
            <button class="btn-close" onclick="document.getElementById('transaction-modal').close()">
                <i data-lucide="x"></i>
            </button>
        </div>
        <form id="finance-form">
            <div class="input-group">
                <label for="desc">Descri√ß√£o</label>
                <input type="text" id="desc" placeholder="Ex: Aluguel ou Freelance" required>
            </div>
        
            <div class="input-row">
                <div class="input-group">
                    <label for="amount">Valor (R$)</label>
                    <input type="number" id="amount" placeholder="0,00" step="0.01" required>
                </div>
        
                <div class="input-group">
                    <label for="type">Tipo</label>
                    <select id="type">
                        <option value="saida" selected>Sa√≠da</option>
                        <option value="entrada">Entrada</option>
                    </select>
                </div>
        
            <div class="input-group">
                <label for="category">Categoria</label>
                <select id="category">
                </select>
            </div>
        
            <input type="hidden" id="edit-index">
            <button type="submit" id="submit-btn" class="btn-primary">Adicionar Transa√ß√£o</button>
        </form>
        </div>
        </dialog>

        <!-- Modal: Nova Meta -->
        <dialog id="goal-modal" class="modal">
            <div class="modal-content card">
                <div class="modal-header">
                    <h3>Criar Nova Meta</h3>
                    <button class="btn-close" onclick="document.getElementById('goal-modal').close()">‚úñ</button>
                </div>
                <form id="goal-form">
                    <div class="input-group">
                        <label for="goal-name">Nome da Meta</label>
                        <input type="text" id="goal-name" placeholder="Ex: Viagem Jap√£o" required>
                    </div>
                    <div class="input-group">
                        <label for="goal-target">Valor Alvo</label>
                        <input type="number" id="goal-target" placeholder="Ex: 15000.00" step="0.01" required>
                    </div>
                    <button type="submit">Criar Meta</button>
                </form>
            </div>
        </dialog>

        <!-- Modal: Gerenciar Metas (Lista) -->
        <dialog id="goals-manager-modal" class="modal">
            <div class="modal-content card" style="max-width: 600px;">
                <div class="modal-header">
                    <h3>Meus Objetivos</h3>
                    <button class="btn-close" onclick="document.getElementById('goals-manager-modal').close()">‚úñ</button>
                </div>
                <div id="goals-list-container" class="goals-list-container">
                    <!-- Lista preenchida via JS -->
                </div>
                <div style="margin-top: 20px; text-align: right;">
                    <button class="btn-create-goal" onclick="document.getElementById('goal-modal').showModal()">+ Nova Meta</button>
                </div>
            </div>
        </dialog>

        <!-- Modal: Nova Tarefa -->
        <dialog id="task-modal" class="modal">
            <div class="modal-content card">
                <div class="modal-header">
                    <h3>Nova Tarefa</h3>
                    <button class="btn-close" onclick="document.getElementById('task-modal').close()">‚úñ</button>
                </div>
                <form id="task-form">
                    <div class="input-group">
                        <label for="task-desc">Descri√ß√£o da Tarefa</label>
                        <input type="text" id="task-desc" placeholder="Ex: Pagar conta de luz" required>
                    </div>
                    <button type="submit">Adicionar Tarefa</button>
                </form>
            </div>
        </dialog>
        
      <dialog id="tag-modal" class="modal tag-modal">
    <div class="modal-content card">
        <div class="modal-header">
            <h3 id="tag-modal-title">Gerenciar Categorias</h3>
            <button class="btn-close" onclick="closeTagModal()">
                <i data-lucide="x"></i>
            </button>
        </div>
    
        <div class="modal-body">
            <div class="tag-modal-layout">
                <section class="tag-panel">
                    <div class="view-group">
                        <button id="add-tag-btn" class="btn-primary" onclick="toggleAddSection()">
                            <i data-lucide="plus"></i> Adicionar Categoria
                        </button>
                        <p class="tag-panel-help">Crie ou edite categorias com Ìcone e cor para organizar melhor suas transaÁıes.</p>
                    </div>

                    <div id="add-tag-section" class="add-tag-section hidden">
                        <h4 id="form-tag-title">Nova Categoria</h4>
                        <div class="input-group">
                            <label for="new-tag-name">Nome</label>
                            <input type="text" id="new-tag-name" placeholder="Ex: Lazer">
                        </div>
                        <div class="input-row">
                            <div class="input-group">
                                <label for="new-tag-icon">Õcone (Lucide)</label>
                                <input type="text" id="new-tag-icon" placeholder="Ex: coffee">
                            </div>
                            <div class="input-group">
                                <label for="new-tag-color">Cor</label>
                                <input type="color" id="new-tag-color" value="#6c5ce7">
                            </div>
                        </div>
                        <input type="hidden" id="edit-tag-id">
                        <div class="form-actions">
                            <button id="save-tag-btn" class="btn-primary" onclick="handleSaveCategory()">Salvar</button>
                            <button class="btn-cancel" onclick="toggleAddSection()">Cancelar</button>
                        </div>
                    </div>
                </section>

                <section class="tag-panel tag-panel-list">
                    <div class="tags-grid-header">
                        <h4>Categorias Existentes</h4>
                        <span class="tags-grid-subtitle">Clique em editar para alterar</span>
                    </div>
                    <div class="tags-grid-container">
                        <div id="tags-list-container" class="tags-list-container">
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</dialog>



       <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="script.js"></script>
    <script>
        // Inicializa os √≠cones do Lucide assim que a p√°gina carrega
        lucide.createIcons();
